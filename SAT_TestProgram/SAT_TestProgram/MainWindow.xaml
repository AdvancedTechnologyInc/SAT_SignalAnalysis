<Window x:Class="SAT_TestProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAT_TestProgram"
        xmlns:scott="clr-namespace:ScottPlot;assembly=ScottPlot"
        xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SAT Test Program" Height="1000" Width="1800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
           <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Section -->
        <GroupBox Grid.Column="0" 
                 Header="Data Set" 
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                             FontSize="16"
                             FontWeight="Bold"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Background="#FFF5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Data Load/Clear Buttons -->
                <Grid Grid.Row="0" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Raw Signal Buttons -->
                    <Button x:Name="btnLoadRawData"
                            Grid.Row="0" Grid.Column="0"
                            Content="LOAD RAW"
                            Margin="5"
                            Padding="5"
                            Click="BtnLoadRawData_Click"/>
                    
                    <Button x:Name="btnClearRawData"
                            Grid.Row="1" Grid.Column="0"
                            Content="CLEAR RAW"
                            Margin="5"
                            Padding="5"
                            Click="BtnClearRawData_Click"/>

                    <!-- Void Signal Buttons -->
                    <Button x:Name="btnLoadVoidData"
                            Grid.Row="0" Grid.Column="1"
                            Content="LOAD VOID"
                            Margin="5"
                            Padding="5"
                            Click="BtnLoadVoidData_Click"/>
                    
                    <Button x:Name="btnClearVoidData"
                            Grid.Row="1" Grid.Column="1"
                            Content="CLEAR VOID"
                            Margin="5"
                            Padding="5"
                            Click="BtnClearVoidData_Click"/>
                </Grid>

                <!-- Algorithm Section -->
                <GroupBox Grid.Row="1"
                         Header="Algorithms"
                         Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Algorithm Buttons -->
                            <StackPanel Grid.Column="0" Margin="5">
                                <!-- Parameter Controls -->
                                <GroupBox Header="Filter Parameters" Margin="0,0,0,10">
                                    <StackPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Middle Cut-off Ratio:" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtMiddleCutOffRatio" Text="0.2" Width="60" 
                                                     ToolTip="Range: 0.0 - 1.0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Side Cut-off Ratio:" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtSideCutoffRatio" Text="0.02" Width="60"
                                                     ToolTip="Range: 0.0 - 1.0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Sampling Rate (Hz):" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtSamplingRate" Text="1000000000" Width="60"
                                                     ToolTip="Sampling rate in Hz"/>
                                        </DockPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Algorithm Buttons -->
                                <Button Content="Perform FFT" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnPerformFFT_Click"/>
                                <Button Content="Apply Frequency Filter" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnApplyFrequencyFilter_Click"/>
                                <Button Content="Perform IFFT" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnPerformIFFT_Click"/>
                                <Button Content="FDomain Filter" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnFDomainFilter_Click"/>
                                <Button Content="Extract Envelope" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnExtractEnvelope_Click"/>
                                <Button Content="Filter+Envelope" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnFilterWithEnvelope_Click"/>
                                <Button x:Name="BtnGaussianFilter" Content="Gaussian Filter" Margin="0,5" 
                                        Padding="5" Click="BtnGaussianFilter_Click"/>
                                <Button x:Name="BtnUnsharpMasking" Content="Unsharp Masking" Margin="0,5" 
                                        Padding="5" Click="BtnUnsharpMasking_Click"/>
                                <Button x:Name="BtnZeroOffset" Content="Zero Offset" Margin="0,5" 
                                        Padding="5" Click="BtnZeroOffset_Click"/>
                                <CheckBox x:Name="chkAbsoluteValue" Content="절대값 적용" Margin="5,0" VerticalAlignment="Center"/>
                                <Button x:Name="BtnThresholdFilter" Content="Threshold Filter" Margin="0,5" 
                                        Padding="5" Click="BtnThresholdFilter_Click"/>
                                <TextBox x:Name="txtThresholdValue" Width="60" Height="23" Margin="5,0" VerticalAlignment="Center" Text="0.5"/>
                                <CheckBox x:Name="chkThresholdAbsolute" Content="절대값 기준" Margin="5,0" VerticalAlignment="Center"/>

                                <Button x:Name="BtnHilbertTransform" Content="Hilbert Transform" Margin="0,5" 
                                        Padding="5" Click="BtnHilbertTransform_Click"/>
                                <CheckBox x:Name="chkHilbertEnvelope" Content="포락선 출력" Margin="5,0" VerticalAlignment="Center" IsChecked="True"/>
                                <!--<Button Content="B-Scan Norm" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnBScanNorm_Click"/>
                                <Button Content="C-Scan Norm" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnCScanNorm_Click"/>-->
                            </StackPanel>

                            <!-- Applied Algorithms List -->
                            <GroupBox Grid.Column="1"
                                     Header="실행 알고리즘"
                                     Margin="5">
                                <ListBox x:Name="lstAppliedAlgorithms"
                                        Margin="5"/>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </GroupBox>
               

            </Grid>
        </GroupBox>

        <!-- Middle Section - Graphs -->
        <TabControl Grid.Column="1" 
                   Margin="5"
                   BorderBrush="Gray"
                   BorderThickness="1">
            
            <!-- A Scan Data Tab -->
            <TabItem Header="A Scan Data">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Upper Graph Section -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Upper Graph Controls -->
                        <StackPanel Grid.Row="0" 
                                  Orientation="Horizontal" 
                                  Margin="10,5,5,0"
                                  Background="#F5F5F5">
                            <CheckBox x:Name="chkRawSignal" 
                                    Content="Raw Signal" 
                                    Margin="5,0,15,0" 
                                    IsChecked="True"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="A Scan 선택:" 
                                     VerticalAlignment="Center" 
                                     Margin="15,0,5,0"/>
                            <ComboBox x:Name="cmbRawAScanSelection"
                                     Width="120"
                                     Margin="5,0,15,0"
                                     SelectionChanged="CmbRawAScanSelection_SelectionChanged"/>
                            <CheckBox x:Name="chkContinuousProcessingUpper"
                                    Content="연속 처리"
                                    Margin="5,0,15,0"
                                    IsChecked="False"
                                    VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkShowLegendUpper"
                                    Content="범례 표시"
                                    Margin="5,0,15,0"
                                    IsChecked="True"
                                    VerticalAlignment="Center"
                                    Checked="ChkShowLegendUpper_Checked"
                                    Unchecked="ChkShowLegendUpper_Unchecked"/>
                            <TextBlock Text="그래프 필터:" 
                                     VerticalAlignment="Center" 
                                     Margin="15,0,5,0"/>
                            <ComboBox x:Name="cmbUpperGraphFilter"
                                     Width="120"
                                     Margin="5,0,15,0"
                                     SelectionChanged="CmbUpperGraphFilter_SelectionChanged"/>
                        </StackPanel>

                        <!-- Upper Graph -->
                        <Border Grid.Row="1" 
                               Margin="5" 
                               BorderBrush="LightGray" 
                               BorderThickness="1">
                            <ScottPlot:WpfPlot x:Name="plotUpper"/>
                        </Border>
                        
                        <!-- Upper Graph Mouse Position Info -->
                        <StackPanel Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  Margin="10,2,5,5"
                                  Background="#F0F0F0">
                            <TextBlock Text="Mouse Position: " 
                                     FontWeight="Bold" 
                                     VerticalAlignment="Center" 
                                     Margin="5,0"/>
                            <TextBlock x:Name="txtUpperMousePosition" 
                                     Text="Index: --, Value: --" 
                                     VerticalAlignment="Center" 
                                     Margin="5,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Lower Graph Section -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Lower Graph Controls -->
                        <StackPanel Grid.Row="0" 
                                  Orientation="Horizontal" 
                                  Margin="10,5,5,0"
                                  Background="#F5F5F5">
                            <CheckBox x:Name="chkProcessedSignal" 
                                    Content="Void Signal" 
                                    Margin="5,0,15,0" 
                                    IsChecked="True"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="A Scan 선택:" 
                                     VerticalAlignment="Center" 
                                     Margin="15,0,5,0"/>
                            <ComboBox x:Name="cmbVoidAScanSelection"
                                     Width="120"
                                     Margin="5,0,15,0"
                                     SelectionChanged="CmbVoidAScanSelection_SelectionChanged"/>
                            <CheckBox x:Name="chkContinuousProcessingLower"
                                    Content="연속 처리"
                                    Margin="5,0,15,0"
                                    IsChecked="False"
                                    VerticalAlignment="Center"/>
                            <CheckBox x:Name="chkShowLegendLower"
                                    Content="범례 표시"
                                    Margin="5,0,15,0"
                                    IsChecked="True"
                                    VerticalAlignment="Center"
                                    Checked="ChkShowLegendLower_Checked"
                                    Unchecked="ChkShowLegendLower_Unchecked"/>
                            <TextBlock Text="그래프 필터:" 
                                     VerticalAlignment="Center" 
                                     Margin="15,0,5,0"/>
                            <ComboBox x:Name="cmbLowerGraphFilter"
                                     Width="120"
                                     Margin="5,0,15,0"
                                     SelectionChanged="CmbLowerGraphFilter_SelectionChanged"/>
                        </StackPanel>

                        <!-- Lower Graph -->
                        <Border Grid.Row="1" 
                               Margin="5" 
                               BorderBrush="LightGray" 
                               BorderThickness="1">
                            <ScottPlot:WpfPlot x:Name="plotLower"/>
                        </Border>
                        
                        <!-- Lower Graph Mouse Position Info -->
                        <StackPanel Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  Margin="10,2,5,5"
                                  Background="#F0F0F0">
                            <TextBlock Text="Mouse Position: " 
                                     FontWeight="Bold" 
                                     VerticalAlignment="Center" 
                                     Margin="5,0"/>
                            <TextBlock x:Name="txtLowerMousePosition" 
                                     Text="Index: --, Value: --" 
                                     VerticalAlignment="Center" 
                                     Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- B Scan Data Tab -->
            <TabItem Header="B Scan Data">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- B Scan Controls -->
                    <StackPanel Grid.Row="0" 
                              Orientation="Horizontal" 
                              Margin="10,5,5,0"
                              Background="#F5F5F5">
                        <TextBlock Text="B Scan Data View" 
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                        <Button x:Name="btnLoadBScanData"
                                Content="Load B Scan Data"
                                Margin="15,0,15,0"
                                Padding="5,2"
                                Click="BtnLoadBScanData_Click"/>
                        <Button x:Name="btnClearBScanData"
                                Content="Clear B Scan Data"
                                Margin="5,0,15,0"
                                Padding="5,2"
                                Click="BtnClearBScanData_Click"/>
                        <Button x:Name="btnBScanEnvelope"
                                Content="B Scan Envelope"
                                Margin="5,0,15,0"
                                Padding="5,2"
                                Click="BtnBScanEnvelope_Click"/>
                        <Button x:Name="btnSaveBScanBitmap"
                                Content="Save as Bitmap"
                                Margin="5,0,15,0"
                                Padding="5,2"
                                Click="BtnSaveBScanBitmap_Click"/>
                        <CheckBox x:Name="chkShowLegendBScan"
                                Content="범례 표시"
                                Margin="15,0,15,0"
                                IsChecked="True"
                                VerticalAlignment="Center"
                                Checked="ChkShowLegendBScan_Checked"
                                Unchecked="ChkShowLegendBScan_Unchecked"/>
                    </StackPanel>

                    <!-- B Scan Graph -->
                    <Border Grid.Row="1" 
                           Margin="5" 
                           BorderBrush="LightGray" 
                           BorderThickness="1">
                        <ScottPlot:WpfPlot x:Name="plotBScan"/>
                    </Border>
                    
                    <!-- B Scan Mouse Position Info -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              Margin="10,2,5,5"
                              Background="#F0F0F0">
                        <TextBlock Text="Mouse Position: " 
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                        <TextBlock x:Name="txtBScanMousePosition" 
                                 Text="Index: --, Value: --" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Right Section - Scale Controls -->
        <GroupBox Grid.Column="2" 
                 Header="Gate Editor" 
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                             FontSize="16"
                             FontWeight="Bold"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Background="#FFF5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Gate Editor Section -->
                <GroupBox Header="Gate Editor" Grid.Row="0" Grid.Column="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Gate Input Controls -->
                        <GroupBox Header="Gate Input" Grid.Row="0" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Index Start -->
                                <TextBlock Text="Index Start:" Grid.Row="0" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtIndexStart" Grid.Row="0" Grid.Column="1" Margin="5,2" Text="0"/>
                                <!-- Index Stop -->
                                <TextBlock Text="Index Stop:" Grid.Row="1" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtIndexStop" Grid.Row="1" Grid.Column="1" Margin="5,2" Text="100"/>
                                <!-- Gate Start -->
                                <TextBlock Text="Gate Start:" Grid.Row="2" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateStart" Grid.Row="2" Grid.Column="1" Margin="5,2" Text="0.0"/>
                                <!-- Gate Stop -->
                                <TextBlock Text="Gate Stop:" Grid.Row="3" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateStop" Grid.Row="3" Grid.Column="1" Margin="5,2" Text="1.0"/>
                                <!-- Gate Num -->
                                <TextBlock Text="Gate Num:" Grid.Row="4" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateNum" Grid.Row="4" Grid.Column="1" Margin="5,2" Text="5"/>
                                <!-- Sound Velocity -->
                                <TextBlock Text="음속 (m/s):" Grid.Row="5" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtSoundVelocity" Grid.Row="5" Grid.Column="1" Margin="5,2" Text="8400" ToolTip="음속을 m/s 단위로 입력하세요" TextChanged="TxtSoundVelocity_TextChanged"/>
                                <!-- B Scan Frame Start -->
                                <TextBlock Text="Frame Start:" Grid.Row="6" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtFrameStart" Grid.Row="6" Grid.Column="1" Margin="5,2" Text="0" ToolTip="B Scan Frame 시작 인덱스"/>
                                <!-- B Scan Frame End -->
                                <TextBlock Text="Frame End:" Grid.Row="7" Grid.Column="0"  VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtFrameEnd" Grid.Row="7" Grid.Column="1" Margin="5,2" Text="100" ToolTip="B Scan Frame 끝 인덱스"/>
                            </Grid>
                        </GroupBox>
                        <!-- Gate Control Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5" Grid.Row="1">
                            <Button x:Name="btnAddGate" Content="Add" Width="55" Margin="2,0" Click="BtnAddGate_Click"/>
                            <Button x:Name="btnModifyGate" Content="Modify" Width="55" Margin="2,0" Click="BtnModifyGate_Click"/>
                            <Button x:Name="btnDeleteGate" Content="Delete" Width="55" Margin="2,0" Click="BtnDeleteGate_Click"/>
                            <Button x:Name="btnInterval" Content="Interval" Width="55" Margin="2,0" Click="BtnInterval_Click"/>
                            <Button x:Name="btnSaveGate" Content="Save" Width="55" Margin="2,0" Click="BtnSaveGate_Click"/>
                            <Button x:Name="btnLoadGate" Content="Load" Width="55" Margin="2,0" Click="BtnLoadGate_Click"/>
                        </StackPanel>
                        <!-- FFT Control Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5" Grid.Row="2">
                            <Button x:Name="btnRawFFT" Content="Raw FFT" Width="75" Margin="2,0" Click="BtnRawFFT_Click" ToolTip="Raw Signal 게이트 구간 FFT 분석"/>
                            <Button x:Name="btnVoidFFT" Content="Void FFT" Width="75" Margin="2,0" Click="BtnVoidFFT_Click" ToolTip="Void Signal 게이트 구간 FFT 분석"/>
                            <Button x:Name="btnClearFFT" Content="Clear FFT" Width="75" Margin="2,0" Click="BtnClearFFT_Click" ToolTip="FFT 데이터 초기화"/>
                        </StackPanel>
                        <!-- Gate Visualization Toggle & MaxIndex Toggle -->
                        <StackPanel Grid.Row="3">
                            <CheckBox x:Name="chkShowGates" Content="Show Gates on Graph"  IsChecked="True" Margin="5,5" Checked="ChkShowGates_Checked" Unchecked="ChkShowGates_Unchecked"/>
                            <CheckBox x:Name="chkUseOriginalDataForMaxIndex" Content="원본 데이터로 MaxIndex 계산"  IsChecked="True" Margin="5,5" Checked="ChkUseOriginalDataForMaxIndex_Checked" Unchecked="ChkUseOriginalDataForMaxIndex_Unchecked" ToolTip="체크: 원본 신호 데이터 기준, 해제: 마지막 알고리즘 처리 데이터 기준"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Gate List -->
                <GroupBox Header="Gate List" Grid.Row="1" Margin="0,5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,5">
                            <Button x:Name="btnCalculateDistances" Content="Cal" 
                                  Width="60" Height="25" Margin="0,0,5,0" 
                                  Click="BtnCalculateDistances_Click"
                                  ToolTip="거리 계산 실행"/>
                            <Button x:Name="btnSaveGateToCSV" Content="Save CSV" 
                                  Width="80" Height="25" Margin="5,0,0,0" 
                                  Click="BtnSaveGateToCSV_Click"
                                  ToolTip="게이트 데이터를 CSV 파일로 저장"/>
                        </StackPanel>
                        <DataGrid x:Name="dgGateList" 
                                 AutoGenerateColumns="False" 
                                 CanUserAddRows="False"
                                 SelectionMode="Single"
                                 SelectionChanged="DgGateList_SelectionChanged"
                                 Height="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Gate Start" Binding="{Binding Start, StringFormat=N2}" Width="80"/>
                                <DataGridTextColumn Header="Gate Stop" Binding="{Binding End, StringFormat=N2}" Width="80"/>
                                <DataGridTextColumn Header="Distance" Binding="{Binding Distance, StringFormat=N2}" Width="80"/>
                                <DataGridTextColumn Header="Raw Max" Binding="{Binding MaxIndexRaw}" Width="70"/>
                                <DataGridTextColumn Header="Void Max" Binding="{Binding MaxIndexVoid}" Width="70"/>
                                <DataGridTextColumn Header="Raw Diff (ns)" Binding="{Binding IndexDifferenceRaw}" Width="80"/>
                                <DataGridTextColumn Header="Void Diff (ns)" Binding="{Binding IndexDifferenceVoid}" Width="80"/>
                                <DataGridTemplateColumn Header="Sound Vel (m/s)" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SoundVelocity, StringFormat=N0}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding SoundVelocity, UpdateSourceTrigger=PropertyChanged}" 
                                                     LostFocus="SoundVelocityTextBox_LostFocus"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Raw Dist (μm)" Binding="{Binding CalculatedDistanceRaw, StringFormat=N1}" Width="80"/>
                                <DataGridTextColumn Header="Void Dist (μm)" Binding="{Binding CalculatedDistanceVoid, StringFormat=N1}" Width="80"/>
                                <DataGridTextColumn Header="Frame Start" Binding="{Binding FrameStart}" Width="80"/>
                                <DataGridTextColumn Header="Frame End" Binding="{Binding FrameEnd}" Width="80"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="100"/>
                                <!-- FFT 관련 컬럼들 -->
                                <DataGridTextColumn Header="Raw Peak Freq (MHz)" Binding="{Binding PeakFrequencyRaw, StringFormat=N2}" Width="120"/>
                                <DataGridTextColumn Header="Void Peak Freq (MHz)" Binding="{Binding PeakFrequencyVoid, StringFormat=N2}" Width="120"/>
                                <DataGridTextColumn Header="Raw Peak Mag" Binding="{Binding PeakMagnitudeRaw, StringFormat=N4}" Width="100"/>
                                <DataGridTextColumn Header="Void Peak Mag" Binding="{Binding PeakMagnitudeVoid, StringFormat=N4}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>

                <!-- Scale Controls -->
                <GroupBox Header="Scale Controls" 
                         Grid.Row="2" 
                         Margin="5">
                    <StackPanel>
                        <!-- X Scale Control -->
                        <GroupBox Header="X Scale" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Range Labels -->
                                <TextBlock Text="{Binding ElementName=rangeSliderX, Path=LowerValue, StringFormat={}{0:F0} ns}"
                                         Grid.Row="0" Grid.Column="0"
                                         Width="80"
                                         TextAlignment="Left"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <TextBlock Text="{Binding ElementName=rangeSliderX, Path=HigherValue, StringFormat={}{0:F0} ns}"
                                         Grid.Row="0" Grid.Column="2"
                                         Width="80"
                                         TextAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <!-- Range Slider -->
                                <xctk:RangeSlider x:Name="rangeSliderX"
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        Minimum="0" 
                                        Maximum="100"
                                        LowerValue="0"
                                        HigherValue="100"
                                        Margin="5"
                                        PreviewMouseMove="RangeSlider_PreviewMouseMove"/>
                            </Grid>
                        </GroupBox>

                        <!-- Y Scale Control -->
                        <GroupBox Header="Y Scale" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Range Labels -->
                                <TextBlock Text="{Binding ElementName=rangeSliderY, Path=LowerValue, StringFormat=N2}"
                                         Grid.Row="0" Grid.Column="0"
                                         Width="40"
                                         TextAlignment="Left"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <TextBlock Text="{Binding ElementName=rangeSliderY, Path=HigherValue, StringFormat=N2}"
                                         Grid.Row="0" Grid.Column="2"
                                         Width="40"
                                         TextAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <!-- Range Slider -->
                                <xctk:RangeSlider x:Name="rangeSliderY"
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        Minimum="-10" 
                                        Maximum="10"
                                        LowerValue="-5"
                                        HigherValue="5"
                                        Margin="5"
                                        PreviewMouseMove="RangeSlider_PreviewMouseMove"/>
                            </Grid>
                        </GroupBox>

                        <!-- Preview Area -->
                        <GroupBox Header="Preview" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Preview Legend -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                    <Rectangle Width="16" Height="12" Fill="#80FF0000" Margin="0,0,5,0"/>
                                    <TextBlock Text="Selected Range" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Preview Plot -->
                                <Border Grid.Row="1" Height="100" Margin="5">
                                    <ScottPlot:WpfPlot x:Name="plotPreview" 
                                                      x:FieldModifier="public"/>
                                </Border>
                            </Grid>
                        </GroupBox>

                        <!-- Control Buttons -->
                        <GroupBox Header="Scale Actions" Margin="0,5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <Button Content="Apply" Width="80" Height="25" Margin="5,0" Click="ApplyScale_Click" ToolTip="현재 스케일을 그래프에 적용"/>
                                <Button Content="Reset Scale" Width="80" Height="25" Margin="5,0" Click="ResetScale_Click" ToolTip="스케일을 기본값으로 초기화"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
