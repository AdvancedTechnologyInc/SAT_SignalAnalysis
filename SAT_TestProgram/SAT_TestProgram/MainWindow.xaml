<Window x:Class="SAT_TestProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAT_TestProgram"
        xmlns:scott="clr-namespace:ScottPlot;assembly=ScottPlot"
        xmlns:wpf="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SAT Test Program" Height="920" Width="1800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
           <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Section -->
        <GroupBox Grid.Column="0" 
                 Header="Data Set" 
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                             FontSize="16"
                             FontWeight="Bold"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Background="#FFF5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Data Load/Clear Buttons -->
                <Grid Grid.Row="0" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Raw Signal Buttons -->
                    <Button x:Name="btnLoadRawData"
                            Grid.Row="0" Grid.Column="0"
                            Content="LOAD RAW"
                            Margin="5"
                            Padding="5"
                            Click="BtnLoadRawData_Click"/>
                    
                    <Button x:Name="btnClearRawData"
                            Grid.Row="1" Grid.Column="0"
                            Content="CLEAR RAW"
                            Margin="5"
                            Padding="5"
                            Click="BtnClearRawData_Click"/>

                    <!-- Void Signal Buttons -->
                    <Button x:Name="btnLoadVoidData"
                            Grid.Row="0" Grid.Column="1"
                            Content="LOAD VOID"
                            Margin="5"
                            Padding="5"
                            Click="BtnLoadVoidData_Click"/>
                    
                    <Button x:Name="btnClearVoidData"
                            Grid.Row="1" Grid.Column="1"
                            Content="CLEAR VOID"
                            Margin="5"
                            Padding="5"
                            Click="BtnClearVoidData_Click"/>
                </Grid>

                <!-- Algorithm Section -->
                <GroupBox Grid.Row="1"
                         Header="Algorithms"
                         Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2.5*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Algorithm Buttons -->
                            <StackPanel Grid.Column="0" Margin="5">
                                <!-- Parameter Controls -->
                                <GroupBox Header="Filter Parameters" Margin="0,0,0,10">
                                    <StackPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Middle Cut-off Ratio:" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtMiddleCutOffRatio" Text="0.2" Width="60" 
                                                     ToolTip="Range: 0.0 - 1.0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Side Cut-off Ratio:" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtSideCutoffRatio" Text="0.02" Width="60"
                                                     ToolTip="Range: 0.0 - 1.0"/>
                                        </DockPanel>
                                        <DockPanel Margin="0,5">
                                            <TextBlock Text="Sampling Rate (Hz):" Width="120" VerticalAlignment="Center"/>
                                            <TextBox x:Name="txtSamplingRate" Text="100" Width="60"
                                                     ToolTip="Sampling rate in Hz"/>
                                        </DockPanel>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Algorithm Buttons -->
                                <Button Content="Perform FFT" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnPerformFFT_Click"/>
                                <Button Content="Apply Frequency Filter" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnApplyFrequencyFilter_Click"/>
                                <Button Content="Perform IFFT" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnPerformIFFT_Click"/>
                                <Button Content="FDomain Filter" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnFDomainFilter_Click"/>
                                <Button Content="Extract Envelope" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnExtractEnvelope_Click"/>
                                <Button Content="Filter+Envelope" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnFilterWithEnvelope_Click"/>
                                <Button x:Name="BtnGaussianFilter" Content="Gaussian Filter" Margin="0,5" 
                                        Padding="5" Click="BtnGaussianFilter_Click"/>
                                <Button x:Name="BtnUnsharpMasking" Content="Unsharp Masking" Margin="0,5" 
                                        Padding="5" Click="BtnUnsharpMasking_Click"/>
                                <Button x:Name="BtnZeroOffset" Content="Zero Offset" Margin="0,5" 
                                        Padding="5" Click="BtnZeroOffset_Click"/>
                                <CheckBox x:Name="chkAbsoluteValue" Content="절대값 적용" Margin="5,0" VerticalAlignment="Center"/>
                                <Button x:Name="BtnThresholdFilter" Content="Threshold Filter" Margin="0,5" 
                                        Padding="5" Click="BtnThresholdFilter_Click"/>
                                <TextBox x:Name="txtThresholdValue" Width="60" Height="23" Margin="5,0" VerticalAlignment="Center" Text="0.5"/>
                                <CheckBox x:Name="chkThresholdAbsolute" Content="절대값 기준" Margin="5,0" VerticalAlignment="Center"/>

                                <Button x:Name="BtnHilbertTransform" Content="Hilbert Transform" Margin="0,5" 
                                        Padding="5" Click="BtnHilbertTransform_Click"/>
                                <CheckBox x:Name="chkHilbertEnvelope" Content="포락선 출력" Margin="5,0" VerticalAlignment="Center" IsChecked="True"/>
                                <!--<Button Content="B-Scan Norm" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnBScanNorm_Click"/>
                                <Button Content="C-Scan Norm" 
                                        Margin="0,5" 
                                        Padding="5"
                                        Click="BtnCScanNorm_Click"/>-->
                            </StackPanel>

                            <!-- Applied Algorithms List -->
                            <GroupBox Grid.Column="1"
                                     Header="실행 알고리즘"
                                     Margin="5">
                                <ListBox x:Name="lstAppliedAlgorithms"
                                        Margin="5"/>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </GroupBox>
               

            </Grid>
        </GroupBox>

        <!-- Middle Section - Graphs -->
        <GroupBox Grid.Column="1" 
                 Header="Signal View" 
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                             FontSize="16"
                             FontWeight="Bold"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Upper Graph Section -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Upper Graph Controls -->
                    <StackPanel Grid.Row="0" 
                              Orientation="Horizontal" 
                              Margin="10,5,5,0"
                              Background="#F5F5F5">
                        <CheckBox x:Name="chkRawSignal" 
                                Content="Raw Signal" 
                                Margin="5,0,15,0" 
                                IsChecked="True"
                                VerticalAlignment="Center"/>
                        <CheckBox x:Name="chkContinuousProcessingUpper"
                                Content="연속 처리"
                                Margin="5,0,15,0"
                                IsChecked="False"
                                VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Upper Graph -->
                    <Border Grid.Row="1" 
                           Margin="5" 
                           BorderBrush="LightGray" 
                           BorderThickness="1">
                        <ScottPlot:WpfPlot x:Name="plotUpper"/>
                    </Border>
                    
                    <!-- Upper Graph Mouse Position Info -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              Margin="10,2,5,5"
                              Background="#F0F0F0">
                        <TextBlock Text="Mouse Position: " 
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                        <TextBlock x:Name="txtUpperMousePosition" 
                                 Text="Index: --, Value: --" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                    </StackPanel>
                </Grid>

                <!-- Lower Graph Section -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Lower Graph Controls -->
                    <StackPanel Grid.Row="0" 
                              Orientation="Horizontal" 
                              Margin="10,5,5,0"
                              Background="#F5F5F5">
                        <CheckBox x:Name="chkProcessedSignal" 
                                Content="Void Signal" 
                                Margin="5,0,15,0" 
                                IsChecked="True"
                                VerticalAlignment="Center"/>
                        <CheckBox x:Name="chkContinuousProcessingLower"
                                Content="연속 처리"
                                Margin="5,0,15,0"
                                IsChecked="False"
                                VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lower Graph -->
                    <Border Grid.Row="1" 
                           Margin="5" 
                           BorderBrush="LightGray" 
                           BorderThickness="1">
                        <ScottPlot:WpfPlot x:Name="plotLower"/>
                    </Border>
                    
                    <!-- Lower Graph Mouse Position Info -->
                    <StackPanel Grid.Row="2" 
                              Orientation="Horizontal" 
                              Margin="10,2,5,5"
                              Background="#F0F0F0">
                        <TextBlock Text="Mouse Position: " 
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                        <TextBlock x:Name="txtLowerMousePosition" 
                                 Text="Index: --, Value: --" 
                                 VerticalAlignment="Center" 
                                 Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Right Section - Scale Controls -->
        <GroupBox Grid.Column="2" 
                 Header="Gate Editor" 
                 Margin="5"
                 BorderBrush="Gray"
                 BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                             FontSize="16"
                             FontWeight="Bold"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Background="#FFF5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Gate Editor Section -->
                <GroupBox Header="Gate Editor" 
                         Grid.Row="0" 
                         Margin="5">
                    <StackPanel>
                        <!-- Gate Input Controls -->
                        <GroupBox Header="Gate Input" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Index Start -->
                                <TextBlock Text="Index Start:" Grid.Row="0" Grid.Column="0" 
                                         VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtIndexStart" Grid.Row="0" Grid.Column="1" 
                                       Margin="5,2" Text="0"/>

                                <!-- Index Stop -->
                                <TextBlock Text="Index Stop:" Grid.Row="1" Grid.Column="0" 
                                         VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtIndexStop" Grid.Row="1" Grid.Column="1" 
                                       Margin="5,2" Text="100"/>

                                <!-- Gate Start -->
                                <TextBlock Text="Gate Start:" Grid.Row="2" Grid.Column="0" 
                                         VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateStart" Grid.Row="2" Grid.Column="1" 
                                       Margin="5,2" Text="0.0"/>

                                <!-- Gate Stop -->
                                <TextBlock Text="Gate Stop:" Grid.Row="3" Grid.Column="0" 
                                         VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateStop" Grid.Row="3" Grid.Column="1" 
                                       Margin="5,2" Text="1.0"/>

                                <!-- Gate Num -->
                                <TextBlock Text="Gate Num:" Grid.Row="4" Grid.Column="0" 
                                         VerticalAlignment="Center" Margin="5,2"/>
                                <TextBox x:Name="txtGateNum" Grid.Row="4" Grid.Column="1" 
                                       Margin="5,2" Text="5"/>
                            </Grid>
                        </GroupBox>

                        <!-- Gate Control Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <Button x:Name="btnAddGate" Content="Add" Width="60" Margin="5,0" Click="BtnAddGate_Click"/>
                            <Button x:Name="btnModifyGate" Content="Modify" Width="60" Margin="5,0" Click="BtnModifyGate_Click"/>
                            <Button x:Name="btnDeleteGate" Content="Delete" Width="60" Margin="5,0" Click="BtnDeleteGate_Click"/>
                            <Button x:Name="btnInterval" Content="Interval" Width="60" Margin="5,0" Click="BtnInterval_Click"/>
                            <Button x:Name="btnSaveGate" Content="Save" Width="60" Margin="5,0" Click="BtnSaveGate_Click"/>
                            <Button x:Name="btnLoadGate" Content="Load" Width="60" Margin="5,0" Click="BtnLoadGate_Click"/>
                        </StackPanel>

                        <!-- Gate Visualization Toggle -->
                        <CheckBox x:Name="chkShowGates" Content="Show Gates on Graph" 
                                 IsChecked="True" Margin="5,5" 
                                 Checked="ChkShowGates_Checked" 
                                 Unchecked="ChkShowGates_Unchecked"/>
                    </StackPanel>
                </GroupBox>

                <!-- Gate Data Grid -->
                <GroupBox Header="Gate List" 
                         Grid.Row="1" 
                         Margin="5">
                    <DataGrid x:Name="dgGateList" 
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False"
                             SelectionMode="Single"
                             SelectionChanged="DgGateList_SelectionChanged"
                             Height="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Gate Start" Binding="{Binding GateStart, StringFormat=N2}" Width="80"/>
                            <DataGridTextColumn Header="Gate Stop" Binding="{Binding GateStop, StringFormat=N2}" Width="80"/>
                            <DataGridTextColumn Header="Distance" Binding="{Binding Distance, StringFormat=N2}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Scale Controls -->
                <GroupBox Header="Scale Controls" 
                         Grid.Row="2" 
                         Margin="5">
                    <StackPanel>
                        <!-- X Scale Control -->
                        <GroupBox Header="X Scale" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Range Labels -->
                                <TextBlock Text="{Binding ElementName=rangeSliderX, Path=LowerValue, StringFormat={}{0:F0} ns}"
                                         Grid.Row="0" Grid.Column="0"
                                         Width="80"
                                         TextAlignment="Left"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <TextBlock Text="{Binding ElementName=rangeSliderX, Path=HigherValue, StringFormat={}{0:F0} ns}"
                                         Grid.Row="0" Grid.Column="2"
                                         Width="80"
                                         TextAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <!-- Range Slider -->
                                <xctk:RangeSlider x:Name="rangeSliderX"
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        Minimum="0" 
                                        Maximum="100"
                                        LowerValue="0"
                                        HigherValue="100"
                                        Margin="5"
                                        PreviewMouseMove="RangeSlider_PreviewMouseMove"/>
                            </Grid>
                        </GroupBox>

                        <!-- Y Scale Control -->
                        <GroupBox Header="Y Scale" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Range Labels -->
                                <TextBlock Text="{Binding ElementName=rangeSliderY, Path=LowerValue, StringFormat=N2}"
                                         Grid.Row="0" Grid.Column="0"
                                         Width="40"
                                         TextAlignment="Left"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <TextBlock Text="{Binding ElementName=rangeSliderY, Path=HigherValue, StringFormat=N2}"
                                         Grid.Row="0" Grid.Column="2"
                                         Width="40"
                                         TextAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="5,0"/>

                                <!-- Range Slider -->
                                <xctk:RangeSlider x:Name="rangeSliderY"
                                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                        Minimum="-10" 
                                        Maximum="10"
                                        LowerValue="-5"
                                        HigherValue="5"
                                        Margin="5"
                                        PreviewMouseMove="RangeSlider_PreviewMouseMove"/>
                            </Grid>
                        </GroupBox>

                        <!-- Preview Area -->
                        <GroupBox Header="Preview" Margin="0,5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Preview Legend -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                    <Rectangle Width="16" Height="12" Fill="#80FF0000" Margin="0,0,5,0"/>
                                    <TextBlock Text="Selected Range" VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Preview Plot -->
                                <Border Grid.Row="1" Height="100" Margin="5">
                                    <ScottPlot:WpfPlot x:Name="plotPreview" 
                                                      x:FieldModifier="public"/>
                                </Border>
                            </Grid>
                        </GroupBox>

                        <!-- Control Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
                            <Button Content="Apply" Width="80" Margin="5,0" Click="ApplyScale_Click"/>
                            <Button Content="Reset Scale" Width="80" Margin="5,0" Click="ResetScale_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
